<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phonenumber</th>
      <th>Subject(code)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.phonenumber %></td>
       
        
        <% if teacher.subject.present? %>

        <td>



          <%= teacher.subject.name  + "("+teacher.subject.subjectcode+")" %>   
        </td>
        <% else %>

        <td><%= link_to 'Add Subject',new_subject_path(teacher: teacher.id) %> </td>
        <% end %>

 <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>





      </tr>
    <% end %>
  </tbody>
</table>

<br>

