    <% if @rec.present? %>

        <td><%= best_in_place @rec, :rmarksobt, :as => :input,:url => recedit_path(@rec.id), remote: true %></td>
        <td><%= best_in_place @rec, :rtotmarks, :as => :input,:url => recedit_path(@rec.id), remote: true %></td>
    <% else %>
 <td>

      <%= form.number_field :rmarksobt, :class => 'rm' %>
  </td>

  <td><%= form.number_field :rtotmarks, :class => 'rt' %></td>
   <td><%= form.submit %></td>
  <% end %>
